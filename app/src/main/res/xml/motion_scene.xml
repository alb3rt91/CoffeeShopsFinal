<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Transición para textView1 -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end1"
        app:duration="600">
        <OnClick
            app:targetId="@id/textView1"
            app:clickAction="toggle" />
    </Transition>

    <!-- Transición para textView2 -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end2"
        app:duration="600">
        <OnClick
            app:targetId="@id/textView2"
            app:clickAction="toggle" />
    </Transition>

    <!-- Transición para textView3 -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end3"
        app:duration="600">
        <OnClick
            app:targetId="@id/textView3"
            app:clickAction="toggle" />
    </Transition>

    <!-- Transición para textView4 -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end4"
        app:duration="600">
        <OnClick
            app:targetId="@id/textView4"
            app:clickAction="toggle" />
    </Transition>

    <!-- Transición para textView5 -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end5"
        app:duration="600">
        <OnClick
            app:targetId="@id/textView5"
            app:clickAction="toggle" />
    </Transition>

    <!-- Estado inicial -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/textView1">
            <Layout android:layout_width="172dp" android:layout_height="93dp"/>
        </Constraint>
        <Constraint android:id="@id/textView2">
            <Layout android:layout_width="172dp" android:layout_height="93dp"/>
        </Constraint>
        <Constraint android:id="@id/textView3">
            <Layout android:layout_width="160dp" android:layout_height="90dp"/>
        </Constraint>
        <Constraint android:id="@id/textView4">
            <Layout android:layout_width="160dp" android:layout_height="90dp"/>
        </Constraint>
        <Constraint android:id="@id/textView5">
            <Layout android:layout_width="160dp" android:layout_height="90dp"/>
        </Constraint>
    </ConstraintSet>

    <!-- Estado final para cada TextView -->
    <ConstraintSet android:id="@+id/end1">
        <Constraint android:id="@id/textView1">
            <Layout android:layout_width="200dp" android:layout_height="110dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint android:id="@id/textView2">
            <Layout android:layout_width="200dp" android:layout_height="110dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end3">
        <Constraint android:id="@id/textView3">
            <Layout android:layout_width="200dp" android:layout_height="110dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end4">
        <Constraint android:id="@id/textView4">
            <Layout android:layout_width="200dp" android:layout_height="110dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end5">
        <Constraint android:id="@id/textView5">
            <Layout android:layout_width="200dp" android:layout_height="110dp"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>
